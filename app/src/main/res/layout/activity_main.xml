<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".MainActivity">
    <com.google.android.material.button.MaterialButton
            android:text="@string/upload_data"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:id="@+id/btnUploadData"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="24dp"
            app:layout_constraintHorizontal_bias="0.5"
            app:layout_constraintTop_toBottomOf="@+id/textView"
            style="@style/PrimaryButton"
            android:layout_marginTop="24dp"
            android:layout_marginStart="24dp"/>
    <TextView
            android:text="@string/app_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/textView"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="8dp"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="8dp"
            android:layout_marginTop="24dp"
            android:textColor="@color/primaryTextColor"
            style="@style/TextAppearance.AppCompat.Large"/>
    <com.google.android.material.button.MaterialButton
            style="@style/PrimaryButton"
            android:text="@string/view_data"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:id="@+id/btnViewData"
            android:layout_marginTop="16dp"
            app:layout_constraintTop_toBottomOf="@+id/btnUploadData"
            app:layout_constraintStart_toStartOf="@+id/btnUploadData"
            app:layout_constraintEnd_toEndOf="@+id/btnUploadData"
    />
    <com.google.android.material.button.MaterialButton
            android:text="@string/record"
            android:layout_width="0dp"
            style="@style/SecondaryButton"
            android:layout_height="wrap_content"
            android:id="@+id/btnRecordScreen"
            app:icon="@drawable/ic_mic"
            app:iconGravity="textStart"
            app:layout_constraintEnd_toEndOf="@+id/btnViewData"
            app:layout_constraintStart_toStartOf="@+id/btnViewData"
            android:layout_marginTop="32dp"
            app:layout_constraintTop_toBottomOf="@+id/btnViewData"/>
    <com.google.android.material.button.MaterialButton
            android:text="@string/view_samples"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            style="@style/SecondaryButton"
            android:id="@+id/btnViewSamples"
            app:layout_constraintEnd_toEndOf="@+id/btnRecordScreen"
            app:layout_constraintStart_toStartOf="@+id/btnRecordScreen"
            app:layout_constraintTop_toBottomOf="@+id/btnRecordScreen"
            android:layout_marginTop="8dp"/>

    <com.google.android.material.button.MaterialButton
            android:text="@string/about_us"
            android:layout_width="0dp"
            style="@style/SecondaryButton"
            android:layout_height="wrap_content"
            android:id="@+id/btnAboutApp"
            app:layout_constraintEnd_toEndOf="@+id/btnViewSamples"
            app:layout_constraintStart_toStartOf="@+id/btnViewSamples"
            android:layout_marginTop="32dp"
            app:layout_constraintTop_toBottomOf="@+id/btnViewSamples"/>
    <com.google.android.material.button.MaterialButton
            android:text="@string/open_source_licenses"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            style="@style/SecondaryButton"
            android:id="@+id/btnOpenSourceLicenses"
            app:layout_constraintEnd_toEndOf="@+id/btnAboutApp"
            app:layout_constraintStart_toStartOf="@+id/btnAboutApp"
            app:layout_constraintTop_toBottomOf="@+id/btnAboutApp"
            android:layout_marginTop="8dp"/>

</androidx.constraintlayout.widget.ConstraintLayout>